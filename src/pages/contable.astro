---
import Layout from "@/layouts/Layout.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import PageHero from "@/components/PageHero.astro"
import ServiceBenefitCard from "@/components/ServiceBenefitCard.astro"
import ServiceCard from "@/components/ServiceCard.astro"
import ServiceCTA from "@/components/ServiceCTA.astro"
import RelatedServiceCard from "@/components/RelatedServiceCard.astro"

const benefits = [
	"Toma de decisiones empresariales más informadas.",
	"Optimización de tus recursos financieros.",
	"Transparencia ante inversores, bancos y autoridades fiscales.",
	"Evitación de errores y sanciones contables."
]

const services = [
	{
		title: "Contabilidad clara y rigurosa",
		description: "Te proporcionamos un análisis detallado y transparente de tus cuentas y balances."
	},
	{
		title: "Elaboración de libros oficiales, balances y cuentas anuales",
		description: "Cumplimos con todos los requisitos legales y te damos los informes contables necesarios para tu tranquilidad."
	},
	{
		title: "Informes contables personalizados",
		description: "Generamos informes que te ayudarán a tomar decisiones estratégicas, adaptados a tu tipo de negocio."
	},
	{
		title: "Gestión fiscal simplificada",
		description: "Integración de la contabilidad con la gestión fiscal para facilitar tu vida empresarial."
	}
]
---

<Layout
  title="Asesoría Contable - Haion Consulting"
  description="Servicios de asesoría contable integral. Contabilidad, balances, cuentas anuales y gestión fiscal."
>
  <main>
    <PageHero 
      title="Tus números no son solo cifras: son decisiones estratégicas."
      subtitle="La contabilidad es la brújula que guía las decisiones empresariales. Con nuestra asesoría contable, te ayudamos a tener una visión clara y precisa de tus finanzas, para que puedas tomar decisiones basadas en datos reales y no en suposiciones."
      image="/img/contable.jpg"
    />

    <SectionContainer variant="plain">
			<!-- Beneficios -->
          <div class="mb-16">
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Beneficios de una buena asesoría contable
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
					{benefits.map((benefit) => (
						<ServiceBenefitCard benefit={benefit} />
					))}
            </div>
          </div>

          <!-- Servicios principales -->
          <div class="mb-16">
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Servicios principales
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{services.map((service) => (
						<ServiceCard title={service.title} description={service.description} />
					))}
            </div>
          </div>
            
          <!-- CTA -->
			<ServiceCTA title="¿Listo para tomar decisiones estratégicas con datos claros?" />

          <!-- Otros servicios -->
          <div>
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Otros servicios que pueden interesarte
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<RelatedServiceCard
						title="Fiscal"
						description="Optimización fiscal, declaraciones y planificación estratégica."
						href="/fiscal"
						icon="fiscal"
					/>
					<RelatedServiceCard
						title="Laboral"
						description="Gestión de nóminas, contratos y cumplimiento laboral."
						href="/laboral"
						icon="laboral"
					/>
            </div>
          </div>
    </SectionContainer>
  </main>
</Layout>
