---
import Layout from "@/layouts/Layout.astro"
import AdminPanel from "@/components/cms/AdminPanel.jsx"
---

<Layout
	title="CMS Admin - Haion Consulting"
	description="Panel de administración de contenido"
	noindex={true}
>
	<AdminPanel client:only="react" />
</Layout>

<style is:global>
	/* Prevenir indexación */
	meta[name="robots"] {
		content: "noindex, nofollow";
	}
	
	/* Ocultar header y footer del sitio en admin */
	body > header:not(.bg-white),
	body > main > footer,
	footer {
		display: none !important;
	}
	
	/* Asegurar que solo se ve el contenido del admin */
	body {
		padding-top: 0 !important;
	}
</style>

