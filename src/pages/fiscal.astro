---
import Layout from "@/layouts/Layout.astro"
import SectionContainer from "@/components/shared/ui/SectionContainer.astro"
import PageHero from "@/components/shared/ui/PageHero.astro"
import ServiceBenefitCard from "@/components/shared/services/ServiceBenefitCard.astro"
import ServiceCard from "@/components/shared/services/ServiceCard.astro"
import ServiceCTA from "@/components/shared/services/ServiceCTA.astro"
import RelatedServiceCard from "@/components/shared/services/RelatedServiceCard.astro"

const benefits = [
	"Maximización de los beneficios fiscales.",
	"Reducción de la carga impositiva mediante planificación.",
	"Evitación de sanciones y errores comunes.",
	"Estrategias fiscales adaptadas al tipo de empresa (autónomos, pymes, grandes empresas)."
]

const services = [
	{
		title: "Declaración y liquidación de impuestos",
		description: "Te ayudamos con la presentación de tus impuestos (IVA, IRPF, Impuesto de Sociedades) asegurando que se pague lo justo."
	},
	{
		title: "Planificación fiscal",
		description: "Identificamos oportunidades fiscales para optimizar tu carga impositiva a corto, medio y largo plazo."
	},
	{
		title: "Representación ante Hacienda",
		description: "Defendemos tu empresa ante cualquier consulta o inspección de la Agencia Tributaria."
	},
	{
		title: "Asesoría en declaraciones trimestrales y anuales",
		description: "Gestionamos todas tus declaraciones fiscales para que no te preocupes por nada."
	}
]
---

<Layout
  title="Asesoría Fiscal - Haion Consulting"
  description="Servicios de asesoría fiscal integral. Optimización fiscal, declaraciones de impuestos y representación ante Hacienda."
>
  <main>
    <PageHero 
      title="Optimiza tu carga fiscal con estrategias claras y eficientes."
      subtitle="La gestión fiscal es uno de los pilares más importantes para la salud financiera de tu empresa. En Haion Consulting, no solo nos ocupamos de tus declaraciones y pagos: ofrecemos una planificación fiscal estratégica que maximiza tus beneficios y minimiza tus riesgos, con un enfoque totalmente adaptado a las necesidades de tu negocio."
      image="/img/fiscal.jpg"
    />

    <SectionContainer variant="plain">
			<!-- Beneficios -->
          <div class="mb-16">
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Beneficios de una buena asesoría fiscal
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
					{benefits.map((benefit) => (
						<ServiceBenefitCard benefit={benefit} />
					))}
            </div>
          </div>

          <!-- Servicios principales -->
          <div class="mb-16">
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Servicios principales
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{services.map((service) => (
						<ServiceCard title={service.title} description={service.description} />
					))}
            </div>
          </div>
            
          <!-- CTA -->
			<ServiceCTA title="¿Listo para optimizar tu carga fiscal?" />

          <!-- Otros servicios -->
          <div>
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Otros servicios que pueden interesarte
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<RelatedServiceCard
						title="Laboral"
						description="Gestión de nóminas, contratos y cumplimiento laboral."
						href="/laboral"
						icon="laboral"
					/>
					<RelatedServiceCard
						title="Contable"
						description="Contabilidad clara, balances y decisiones estratégicas."
						href="/contable"
						icon="contable"
					/>
            </div>
          </div>
    </SectionContainer>
  </main>
</Layout>
