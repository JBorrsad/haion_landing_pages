---
import Layout from "@/layouts/Layout.astro"
import SectionContainer from "@/components/shared/ui/SectionContainer.astro"
import PageHero from "@/components/shared/ui/PageHero.astro"
import ServiceBenefitCard from "@/components/shared/services/ServiceBenefitCard.astro"
import ServiceCard from "@/components/shared/services/ServiceCard.astro"
import ServiceCTA from "@/components/shared/services/ServiceCTA.astro"
import RelatedServiceCard from "@/components/shared/services/RelatedServiceCard.astro"

const benefits = [
	"Cumplimiento con la normativa laboral vigente.",
	"Reducción de riesgos laborales y legales.",
	"Mejora de la productividad y satisfacción de tus empleados.",
	"Ahorro de tiempo y recursos en gestión de personal."
]

const services = [
	{
		title: "Gestión de nóminas y seguros sociales",
		description: "Nos ocupamos de que tus empleados reciban sus nóminas a tiempo y de acuerdo con la legislación."
	},
	{
		title: "Contrataciones y despidos",
		description: "Te asesoramos en la contratación y despido de empleados, asegurando que todo el proceso sea legal y eficiente."
	},
	{
		title: "Defensa ante inspecciones de trabajo",
		description: "En caso de ser inspeccionado, te representamos ante las autoridades laborales."
	},
	{
		title: "Convenios colectivos",
		description: "Asesoramos sobre los convenios aplicables a tu empresa y cómo negociar las mejores condiciones para tus empleados."
	}
]
---

<Layout
  title="Asesoría Laboral - Haion Consulting"
  description="Servicios de asesoría laboral integral. Gestión de nóminas, contratos de trabajo y cumplimiento normativo laboral."
>
  <main>
    <PageHero 
      title="Cuidamos de tu equipo y aseguramos el cumplimiento normativo."
      subtitle="La gestión laboral no solo se trata de cumplir con la legislación, sino de crear un ambiente de trabajo sano, legal y eficiente. Te ayudamos a gestionar tu equipo de manera que puedas centrarte en lo que mejor sabes hacer: crecer tu negocio."
      image="/img/laboral.png"
    />

    <SectionContainer variant="plain">
			<!-- Beneficios -->
          <div class="mb-16">
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Beneficios de una buena asesoría laboral
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
					{benefits.map((benefit) => (
						<ServiceBenefitCard benefit={benefit} />
					))}
            </div>
          </div>

          <!-- Servicios principales -->
          <div class="mb-16">
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Servicios principales
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{services.map((service) => (
						<ServiceCard title={service.title} description={service.description} />
					))}
            </div>
          </div>
            
          <!-- CTA -->
			<ServiceCTA title="¿Estás listo para mejorar la gestión laboral de tu empresa?" />

          <!-- Otros servicios -->
          <div>
            <h2 class="h2 mb-8 md:mb-10 text-center">
              Otros servicios que pueden interesarte
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<RelatedServiceCard
						title="Fiscal"
						description="Optimización fiscal, declaraciones y planificación estratégica."
						href="/fiscal"
						icon="fiscal"
					/>
					<RelatedServiceCard
						title="Contable"
						description="Contabilidad clara, balances y decisiones estratégicas."
						href="/contable"
						icon="contable"
					/>
            </div>
          </div>
    </SectionContainer>
  </main>
</Layout>
