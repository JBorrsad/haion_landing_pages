---
import Layout from "@/layouts/Layout.astro"
import AdminNew from "@/components/AdminNew.jsx"
---

<Layout
	title="CMS Admin - Haion Consulting"
	description="Panel de administración de contenido"
	noindex={true}
>
	<AdminNew client:only="react" />
</Layout>

<style is:global>
	/* Prevenir indexación */
	meta[name="robots"] {
		content: "noindex, nofollow";
	}
	
	/* Ocultar header y footer del sitio en admin */
	header[data-astro-cid-r432udu2],
	footer {
		display: none !important;
	}
</style>

