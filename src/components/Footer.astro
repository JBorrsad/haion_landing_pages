---
import Logo from "./Logo.astro"
import MailIcon from "./icons/Mail.astro"
import WhatsAppIcon from "./icons/WhatsApp.astro"
import LinkedInIcon from "./icons/LinkedIn.astro"
---

<footer class="bg-gray-800 text-white mt-16">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Logo de Haion Consulting -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <Logo class="w-40 h-auto text-white" />
        </div>
      </div>

      <!-- Datos de contacto -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-white">HAION CONSULTING</h3>
        <div class="space-y-2 text-sm text-gray-300">
          <p>Calle de ejemplo, nº 70</p>
          <p>666 123 456</p>
          <p>info@ejemplo.com</p>
        </div>
      </div>

      <!-- Menú -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-white">Menú</h3>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><a href="/haion_landing/#servicios" class="hover:text-orange-400 transition-colors">Servicios</a></li>
          <li><a href="/haion_landing/fiscal" class="hover:text-orange-400 transition-colors">Fiscal</a></li>
          <li><a href="/haion_landing/laboral" class="hover:text-orange-400 transition-colors">Laboral</a></li>
          <li><a href="/haion_landing/contable" class="hover:text-orange-400 transition-colors">Contable</a></li>
          <li><a href="/haion_landing/#sobre-nosotros" class="hover:text-orange-400 transition-colors">Nosotros</a></li>
          <li><a href="/haion_landing/contacto" class="hover:text-orange-400 transition-colors">Contacto</a></li>
        </ul>
      </div>

      <!-- Texto fijo -->
      <div>
        <p class="text-gray-300 text-sm leading-relaxed">
          Gestión clara, compromiso real.
          No se trata de parecer expertos, sino de serlo.
        </p>
      </div>

    </div>

    <!-- Copyright y redes sociales -->
    <div class="border-t border-gray-700 mt-8 pt-6 flex flex-col md:flex-row justify-between items-center">
      <div class="text-sm text-gray-400 mb-4 md:mb-0">
        <p>© 2025 Haion Consulting — Desarrollado por Juan Borrás</p>
      </div>
      
      <div class="flex space-x-4">
        <a href="[URL_LINKEDIN_EMPRESA]" target="_blank" rel="noopener noreferrer" 
           class="text-gray-400 hover:text-orange-400 transition-colors">
          <LinkedInIcon class="size-6" />
        </a>
        <a href="mailto:info@ilaiasesores.com" 
           class="text-gray-400 hover:text-orange-400 transition-colors">
          <MailIcon class="size-6" />
        </a>
        <a href="tel:948187173"
           class="text-gray-400 hover:text-orange-400 transition-colors">
          <svg class="size-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
