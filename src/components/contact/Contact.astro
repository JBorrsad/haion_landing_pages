---
import MailIcon from "@/components/shared/icons/Mail.astro"
import WhatsAppIcon from "@/components/shared/icons/WhatsApp.astro"
import LinkedInIcon from "@/components/shared/icons/LinkedIn.astro"
import LegalModal from "@/components/legal/LegalModal.astro"
---

<div>
	<div class="mb-12">
		<h2 class="h2">
			Contáctanos
		</h2>
	</div>

	<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
		<!-- Columna izquierda: Información de contacto -->
		<div class="space-y-4">
			<div class="card flex items-center gap-4 p-4">
				<div class="flex items-center justify-center w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-900/20">
					<svg class="size-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
					</svg>
				</div>
				<div>
					<h3 class="font-semibold text-gray-900 dark:text-white">Ubicación</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">C/ Provincias 5, 1ª Planta<br>31002 Pamplona, Navarra</p>
				</div>
			</div>

			<div class="card flex items-center gap-4 p-4">
				<div class="flex items-center justify-center w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-900/20">
					<svg class="size-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
					</svg>
				</div>
				<div>
					<h3 class="font-semibold text-gray-900 dark:text-white">Teléfono</h3>
					<div class="text-sm text-gray-600 dark:text-gray-400">
						<p>620 327 299</p>
					</div>
				</div>
			</div>

			<a
				href="mailto:info@haion-consulting.es"
				class="card flex items-center gap-4 p-4 hover:shadow-lg transition-shadow"
			>
				<div class="flex items-center justify-center w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-900/20">
					<MailIcon class="size-6 text-yellow-600 dark:text-yellow-400" />
				</div>
				<div>
					<h3 class="font-semibold text-gray-900 dark:text-white">Email</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">info@haion-consulting.es</p>
				</div>
			</a>

			<a
				href="https://wa.me/34620327299"
				target="_blank"
				rel="noopener noreferrer"
				class="card flex items-center gap-4 p-4 hover:shadow-lg transition-shadow"
			>
				<div class="flex items-center justify-center w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-900/20">
					<WhatsAppIcon class="size-6 text-yellow-600 dark:text-yellow-400" />
				</div>
				<div>
					<h3 class="font-semibold text-gray-900 dark:text-white">WhatsApp</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">620 327 299</p>
				</div>
			</a>

			<a
				href="https://www.linkedin.com/company/haionconsulting/"
				target="_blank"
				rel="noopener noreferrer"
				class="card flex items-center gap-4 p-4 hover:shadow-lg transition-shadow"
			>
				<div class="flex items-center justify-center w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-900/20">
					<LinkedInIcon class="size-6 text-yellow-600 dark:text-yellow-400" />
				</div>
				<div>
					<h3 class="font-semibold text-gray-900 dark:text-white">LinkedIn</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Haion Consulting</p>
				</div>
			</a>
		</div>

		<!-- Columna derecha: Formulario -->
		<div class="card p-8">
			<div class="mb-6">
				<p class="text-sm text-gray-600 dark:text-gray-400 uppercase tracking-wide mb-2">
					¿TIENES ALGUNA DUDA?
				</p>
			</div>
			<form class="space-y-6">
				<div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
				<div>
					<input
						type="text"
						id="nombre"
						name="nombre"
						required
						placeholder="Nombre"
						class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:border-yellow-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 transition-colors"
					/>
				</div>
				
				<div>
					<input
						type="email"
						id="email"
						name="email"
						required
						placeholder="Email"
						class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:border-yellow-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 transition-colors"
					/>
				</div>

				<div>
					<input
						type="tel"
						id="telefono"
						name="telefono"
						required
						placeholder="Teléfono"
						class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:border-yellow-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 transition-colors"
					/>
				</div>
			</div>

			<div>
				<textarea
					id="mensaje"
					name="mensaje"
					rows="6"
					placeholder="Mensaje"
					class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:border-yellow-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 transition-colors resize-vertical"
				></textarea>
			</div>

			<div class="flex items-start gap-2">
				<input
					type="checkbox"
					id="privacidad"
					name="privacidad"
					required
					class="mt-1"
				/>
				<label for="privacidad" class="text-sm text-gray-600 dark:text-gray-400">
					He leído y acepto las condiciones del <span id="open-legal-link" class="text-yellow-600 dark:text-yellow-400 hover:underline cursor-pointer">Aviso legal y la política de privacidad</span>
				</label>
			</div>

			<div>
				<button
					type="submit"
					class="px-6 py-3 bg-yellow-200 hover:bg-yellow-300 text-gray-800 font-medium rounded-lg transition-colors inline-flex items-center gap-2"
				>
					Enviar
				</button>
			</div>
			
			<p class="text-sm text-gray-500 dark:text-gray-400">
				Te respondemos en menos de 24 horas.
			</p>
			</form>
		</div>
	</div>
</div>

<LegalModal />

<script is:inline>
	function initLegalLink() {
		const legalLink = document.getElementById('open-legal-link');
		if (legalLink) {
			legalLink.addEventListener('click', () => {
				if (window.openLegalModal) {
					window.openLegalModal();
				}
			});
		}
	}

	// Ejecutar en la carga inicial
	initLegalLink();
	
	// Re-ejecutar después de cada navegación con View Transitions
	document.addEventListener('astro:page-load', initLegalLink);
</script> 
