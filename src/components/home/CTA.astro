---
import { loadContent } from '@/lib/cms'

const content = loadContent('home')
const cta = content.cta
---

<div class="max-w-5xl mx-auto text-center px-6 sm:px-8 md:px-12">
	<div class="rounded-2xl p-12 border-2" style="background-color: #FFFBE6; border-color: #F5E6A8;">
		<h2 class="h2 mb-6" style="color: #212529;">
			{cta.title}
		</h2>
		
		<p class="mb-8 text-base sm:text-lg" style="color: #212529;">
			{cta.subtitle}
		</p>
		
		<div class="flex justify-center">
			<a
				href={cta.buttonLink}
				class="inline-flex items-center justify-center gap-2 px-8 py-4 font-medium rounded-2xl transition-colors text-lg"
				style="background-color: #FFF080; color: #212529;"
			>
				{cta.buttonText}
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
				</svg>
			</a>
		</div>
		
		<p class="mt-6 text-sm" style="color: #212529;">
			{cta.footer}
		</p>
	</div>
</div>
