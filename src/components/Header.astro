---
import Logo from "./Logo.astro";

const navItems = [
  {
    title: "Nosotros",
    label: "sobre-nosotros",
    url: "/haion_landing_pages/#sobre-nosotros",
  },
  {
    title: "Servicios",
    label: "servicios",
    url: "/haion_landing_pages/#servicios",
  },
  {
    title: "Fiscal",
    label: "fiscal",
    url: "/haion_landing_pages/fiscal",
  },
  {
    title: "Laboral",
    label: "laboral",
    url: "/haion_landing_pages/laboral",
  },
  {
    title: "Contable",
    label: "contable",
    url: "/haion_landing_pages/contable",
  },
]
---

<header
  class="header-animated fixed top-0 z-50 w-full bg-white shadow-lg"
>
  <!-- Desktop Navigation -->
  <div class="hidden md:flex items-center justify-between w-full px-4 py-3 mx-auto">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/haion_landing_pages/" id="logo-link-desktop" class="flex items-center">
        <Logo class="w-28 h-auto text-gray-800" />
      </a>
    </div>

    <!-- Navigation -->
    <nav
      class="flex px-2 md:px-3 text-xs md:text-sm font-medium text-gray-700 items-center space-x-6"
    >
      {
        navItems.map((link) => (
          <a
            class="relative block px-1 md:px-2 py-2 transition hover:text-yellow-600 text-center min-w-0 flex-shrink-0 uppercase tracking-wide"
            aria-label={link.label}
            href={link.url}
            data-section={link.label}
          >
            {link.title}
          </a>
        ))
      }
      
      <!-- Contact Button -->
      <a
        href="/haion_landing_pages/contacto"
        class="px-4 py-2 bg-yellow-200 text-gray-800 font-medium rounded-full hover:bg-yellow-300 transition-colors uppercase tracking-wide text-sm"
      >
        Contacto
      </a>
      
      <!-- Search Icon -->
      <button 
        class="p-2 text-gray-600 hover:text-yellow-600 transition-colors"
        aria-label="Buscar"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Navigation -->
  <div class="md:hidden">
    <!-- Mobile Header -->
    <div class="flex items-center justify-between w-full px-4 py-3">
      <!-- Hamburger Menu Button -->
      <button 
        id="mobile-menu-toggle"
        class="p-2 text-gray-600 hover:text-yellow-600 transition-colors"
        aria-label="Menú"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Logo centered -->
      <div class="flex items-center">
        <a href="/haion_landing_pages/" id="logo-link-mobile" class="flex items-center">
          <Logo class="w-24 h-auto text-gray-800" />
        </a>
      </div>

      <!-- Empty space for balance -->
      <div class="w-10"></div>
    </div>

    <!-- Mobile Menu -->
    <div 
      id="mobile-menu"
      class="hidden bg-white border-t border-gray-200 shadow-lg"
    >
      <nav class="px-4 py-6 space-y-4">
        {
          navItems.map((link) => (
            <a
              class="block py-3 px-4 text-gray-700 hover:text-yellow-600 hover:bg-gray-50 rounded-lg transition-colors uppercase tracking-wide font-medium"
              aria-label={link.label}
              href={link.url}
              data-section={link.label}
            >
              {link.title}
            </a>
          ))
        }
        
        <!-- Mobile Contact Button -->
        <a
          href="/haion_landing_pages/contacto"
          class="block py-3 px-4 bg-yellow-200 text-gray-800 font-medium rounded-lg hover:bg-yellow-300 transition-colors uppercase tracking-wide text-center mt-4"
        >
          Contacto
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section")
    const navItems = document.querySelectorAll("header nav a[data-section]")
    const currentPath = window.location.pathname
    const isMainPage = currentPath === "/haion_landing_pages/" || currentPath === "/haion_landing_pages/index.html" || currentPath === "/haion_landing"
    
    // Event listener para el logo - activar animación
    const logoDesktop = document.getElementById('logo-link-desktop');
    const logoMobile = document.getElementById('logo-link-mobile');
    
    const handleLogoClick = () => {
      sessionStorage.setItem('animate-hero', 'true');
    };
    
    if (logoDesktop) {
      logoDesktop.addEventListener('click', handleLogoClick);
    }
    
    if (logoMobile) {
      logoMobile.addEventListener('click', handleLogoClick);
    }
    
    // Función para actualizar el resaltado según la página actual
    const updateActiveNav = () => {
      navItems.forEach((item) => {
        const itemLabel = item.getAttribute("data-section")
        item.classList.remove("text-yellow-600", "font-bold")
        
        // Resaltar según la página actual (excepto contacto y página principal)
        if (currentPath.includes("/fiscal") && itemLabel === "fiscal") {
          item.classList.add("text-yellow-600", "font-bold")
        } else if (currentPath.includes("/laboral") && itemLabel === "laboral") {
          item.classList.add("text-yellow-600", "font-bold")
        } else if (currentPath.includes("/contable") && itemLabel === "contable") {
          item.classList.add("text-yellow-600", "font-bold")
        } else if (currentPath.includes("/servicios") && itemLabel === "servicios") {
          item.classList.add("text-yellow-600", "font-bold")
        }
        // Nota: No resaltar contacto nunca
      })
    }
    
    // Actualizar resaltado inicial basado en la página (solo si NO es la página principal)
    if (!isMainPage) {
      updateActiveNav()
    }
    
    // Mobile menu functionality
    const mobileMenuToggle = document.getElementById("mobile-menu-toggle")
    const mobileMenu = document.getElementById("mobile-menu")
    
    if (mobileMenuToggle && mobileMenu) {
      mobileMenuToggle.addEventListener("click", () => {
        const isHidden = mobileMenu.classList.contains("hidden")
        
        if (isHidden) {
          mobileMenu.classList.remove("hidden")
          mobileMenuToggle.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          `
        } else {
          mobileMenu.classList.add("hidden")
          mobileMenuToggle.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `
        }
      })
      
      // Close mobile menu when clicking on a link
      const mobileNavLinks = mobileMenu.querySelectorAll("a")
      mobileNavLinks.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden")
          mobileMenuToggle.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `
        })
      })
    }

    // Función para scroll suave a las secciones (solo en la página principal)
    const handleNavClick = (e: Event) => {
      const target = e.target as HTMLAnchorElement
      const href = target.getAttribute("href")
      
      // Solo manejar enlaces internos que empiecen con /haion_landing_pages/#
      if (href && href.includes("#") && (window.location.pathname === "/haion_landing_pages/" || window.location.pathname === "/haion_landing")) {
        e.preventDefault()
        const sectionId = href.split("#")[1] // Obtener la parte después del #
        const section = document.getElementById(sectionId)
        if (section) {
          section.scrollIntoView({ 
            behavior: "smooth",
            block: "start"
          })
        }
      }
      // Para otros enlaces, dejar que se comporten normalmente
    }

    // Agregar event listeners a los enlaces de navegación
    navItems.forEach((item) => {
      item.addEventListener("click", handleNavClick)
    })

    // Sistema de resaltado para la página principal (secciones con scroll)
    if (isMainPage) {
      const updateActiveSection = () => {
        const scrollPosition = window.scrollY + window.innerHeight / 2 // Mitad de la pantalla
        
        let activeSection = ''
        
        // Recorrer todas las secciones y encontrar cuál está en la mitad de la pantalla
        sections.forEach((section) => {
          if (section.id) {
            const sectionTop = section.offsetTop
            const sectionBottom = sectionTop + section.offsetHeight
            
            // Si la mitad de la pantalla está dentro de esta sección
            if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
              activeSection = section.id
            }
          }
        })
        
        // Actualizar el resaltado del navbar (o limpiar todo si no hay sección activa)
        navItems.forEach((item) => {
          const itemLabel = item.getAttribute("aria-label")
          
          if (activeSection && itemLabel === activeSection) {
            item.classList.add("text-yellow-600", "font-bold")
          } else {
            item.classList.remove("text-yellow-600", "font-bold")
          }
        })
      }
      
      // Ejecutar al hacer scroll
      window.addEventListener("scroll", updateActiveSection, { passive: true })
      
      // Ejecutar al cargar la página
      updateActiveSection()
      
      // Cleanup
      document.addEventListener("astro:before-preparation", () => {
        window.removeEventListener("scroll", updateActiveSection)
      })
    }
  })
</script>

<style>
  header {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  body.play-hero-reveal .header-animated {
    opacity: 0;
    transform: translateY(-100%);
    animation: headerSlideDown 0.6s ease-out 1.5s forwards;
  }

  body:not(.play-hero-reveal) .header-animated {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes headerSlideDown {
    0% {
      opacity: 0;
      transform: translateY(-100%);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

